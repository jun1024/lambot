# .env 예시 파일

UPBIT_ACCESS_KEY=your_access_key_here
UPBIT_SECRET_KEY=your_secret_key_here

# DRY_RUN=true -> 실제 주문을 보내지 않습니다. 기본값 true 권장.
DRY_RUN=true

# 분할매수 관련
INSTALLMENTS=5
INTERVAL_MIN=60
MIN_KRW_ORDER=5000
TOTAL_INVEST_FRACTION=0.5
# 또는 절대 금액 지정
# TOTAL_INVEST_KRW=100000

# 코인별 비중 예시 (퍼센트 또는 소수 둘 다 지원)
# 퍼센트 예: 50,30,20 형태
# ALLOCATIONS=KRW-BTC:50,KRW-ETH:30,KRW-XRP:20
# 소수(분수) 예: 0.5,0.3,0.2 형태
# ALLOCATIONS=BTC:0.5,ETH:0.3,XRP:0.2

# Exit(청산) 관련: 퍼센트 또는 절대 KRW 둘 중 하나 또는 둘 다 지정 가능
TARGET_PROFIT_PCT=10          # 예: 10 -> 10% 이익 시 청산
# TARGET_PROFIT_KRW=5000      # 예: 5000원 이상 이익 시 청산

# 매도 시 비율 (전량:1.0, 일부:0.5 등)
SELL_FRACTION=1.0

# DRY_RUN 시 사용할 시뮬레이션 KRW 잔고
SIM_KRW_BALANCE=100000

# purchases.json 파일명 (기본)
PURCHASES_FILE=purchases.json

# 모니터링 로그 주기(분)
MONITOR_INTERVAL_MIN=60